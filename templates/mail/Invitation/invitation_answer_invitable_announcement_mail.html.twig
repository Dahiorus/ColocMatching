{% extends 'mail/layout_base_mail.html.twig' %}

{% block content %}
    {% set recipientName = from.getDisplayName() %}
    {% set link = url('coloc_matching.announcement_url', { 'id': id }) %}

    <p>
        {{- 'mail.body.invitation.answer.invitable.announcement'|trans({
            '%recipientName%': recipientName,
            '%link%': link
        })|raw|nl2br -}}
    </p>
    <p>{{- 'mail.body.url_problem'|trans({ '%link%': link })|nl2br -}}</p>
{% endblock content %}
