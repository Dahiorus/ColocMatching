{% extends 'mail/layout_base_mail.html.twig' %}

{% block content %}
    {% set fromName = from.getDisplayName() %}
    {% set link = absolute_url(path('coloc_matching.group_url', { 'id': id })) %}

    <p>
        {{- 'mail.body.invitation.invitable.group.link'|trans({
            '%name%': fromName,
            '%link%': link
        })|raw -}}
    </p>
    <blockquote>{{- message|nl2br -}}</blockquote>
    <p>{{- 'mail.body.invitation.invitable.group.cheer_up'|trans -}}</p>
    <p>{{- 'mail.body.url_problem'|trans({ '%link%': link })|nl2br -}}</p>
{% endblock content %}
