<table class="table table-striped" id="announcement-table">
	<thead>
		<tr>
			<th>{{ "announcements.title"|trans }}</th>
			<th>{{ "announcements.type.title"|trans }}</th>
			<th>{{ "announcements.creator"|trans }}</th>
			<th>{{ "announcements.rent_price.title"|trans }}</th>
			<th>{{ "announcements.location"|trans }}</th>
		</tr>
	</thead>
	
	<tbody>
		{% for announcement in announcements %}
        <tr id="{{ "announcement-" ~ announcement.id }}">
        	<td class="title">{{ announcement.title }}</td>
        	<td class="type">{{ ("announcements.type." ~ announcement.type)|trans }}</td>
        	<td class="creator">{{ announcement.creator.firstname ~ " " ~ announcement.creator.lastname }}</td>
        	<td class="rent-price">{{ announcement.rentPrice }}</td>
        	<td class="location">{{ announcement.getShortLocation() }}</td>
        </tr>
        {% endfor %}
	</tbody>
</table>