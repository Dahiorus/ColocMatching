<table class="table table-striped" id="user-table">
	<thead>
		<tr>
			<th>{{ "users.email"|trans }}</th>
			<th>{{ "users.name"|trans }}</th>
			<th>{{ "users.type.title"|trans }}</th>
			<th>{{ "users.status.title"|trans }}</th>
			<th>{{ "users.created_at.title"|trans }}</th>
		</tr>
	</thead>
	
	<tbody>
		{% for user in users %}
        <tr id="{{ "user-" ~ user.id }}">
        	<td class="email">{{ user.email }}</td>
        	<td class="name">{{ user.getDisplayName() }}</td>
        	<td class="type">{{ ("users.type." ~ user.type)|trans }}</td>
        	<td class="status">{{ ("users.status." ~ user.status)|trans }}</td>
        	<td class="created-at">{{ user.createdAt|localizeddate("short", "none") }}</td>
        </tr>
        {% endfor %}
	</tbody>
</table>