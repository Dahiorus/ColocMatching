<table class="table table-striped" id="user-table">
	<thead>
		<tr>
			<th>{{ "users.email"|trans }}</th>
			<th>{{ "users.name"|trans }}</th>
			<th>{{ "users.type.title"|trans }}</th>
			<th>{{ "users.enabled"|trans }}</th>
			<th>{{ "users.created_at"|trans }}</th>
		</tr>
	</thead>
	
	<tbody>
		{% for user in users %}
        <tr id="{{ "user-" ~ user.id }}">
        	<td class="email">{{ user.email }}</td>
        	<td class="name">{{ user.firstname ~ " " ~ user.lastname }}</td>
        	<td class="type">{{ ("users.type." ~ user.type)|trans }}</td>
        	<td class="enabled">{% if user.enabled %}<i class="fa fa-check fa-lg" style="color:green;"></i>{% endif %}</td>
        	<td class="created-at">{{ user.createdAt|localizeddate("short", "none") }}</td>
        </tr>
        {% endfor %}
	</tbody>
</table>