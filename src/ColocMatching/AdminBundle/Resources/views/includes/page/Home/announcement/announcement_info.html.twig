<div class="row">
	<div class="col-md-6 col-sm-6 col-xs-12">
		<div class="box">
          	<div class="box-header with-border">
            	<h3 class="box-title">{{ "label.info.announcements.latest"|trans }}</h3>
            	<div class="box-tools pull-right">
              		<span class="label label-primary">{{ announcements|length }}</span>
            	</div>
          	</div>
          	
          	<div class="box-body">
          		<div class="table-responsive">
          			{% include "@includes/page/Home/announcement/announcement_table.html.twig" with { 'announcements': announcements }  %}
          		</div>
          	</div>
        </div>
	</div>
	
	<div class="col-md-6 col-sm-6 col-xs-12">
		<div class="box">
          	<div class="box-header with-border">
            	<h3 class="box-title">{{ "label.info.announcements.stats"|trans }}</h3>
          	</div>
          	
          	<div class="box-body">
          		{% for announcement in announcements %}
          			{% set location = announcement.location %}
          		<span class="hidden announcement-latlng" data-id="{{ announcement.id }}" data-lat="{{ location.lat }}" data-lng="{{ location.lng }}"></span>
          		{% endfor %}
          		<div id="announcement-map" style="height: 600px;"></div>
          	</div>
        </div>
	</div>
</div>
