<div class="row">
    {% set announcements = response.content %}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th>{{ "announcements.title.label"|trans }}</th>
                    <th>{{ "announcements.type.label"|trans }}</th>
                    <th>{{ "announcements.rent_price.label"|trans }}</th>
                    <th>{{ "announcements.location.label"|trans }}</th>
                    <th>{{ "announcements.created_at.label"|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for announcement in announcements %}
                    <tr id="announcement-{{ announcement.id }}" class="clickable-row" data-id="{{ announcement.id }}"
                        data-href="{{ path("admin_announcement_history", {"id": announcement.id}) }}">
                        <td class="title">{{ announcement.title }}</td>
                        <td class="type">{{ ("announcements.type." ~ announcement.type)|trans }}</td>
                        <td class="rent-price">{{ "announcements.rent_price.value"|trans({"%value%": announcement.rentPrice}) }}</td>
                        <td class="location">{{ announcement.getShortLocation() }}</td>
                        <td class="created-at">{{ announcement.createdAt|localizeddate("short", "short") }}</td>
                    </tr>
                {% endfor %}

                {% if announcements is empty %}
                    <tr>
                        <td colspan="8">
                            <p class="text-center">{{ "label.info.empty_result"|trans }}</p>
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {% include "@includes/Pagination/pager.html.twig" with {"route": routeName, "response": response, "target": '#table-content'} %}
    </div>
    <div class="col-md-3 col-sm-2 col-xs-12">
        <div class="pull-right">
            {% include "@includes/Pagination/results_per_page.html.twig" with {"route": routeName, "response": response, "target": '#table-content'} %}
        </div>
    </div>
</div>