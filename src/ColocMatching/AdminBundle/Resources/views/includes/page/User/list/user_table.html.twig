<div class="row">
    {% set users = response.content %}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>{{ "users.email.label"|trans }}</th>
                        <th>{{ "users.name.label"|trans }}</th>
                        <th>{{ "users.type.label"|trans }}</th>
                        <th>{{ "users.status.label"|trans }}</th>
                        <th>{{ "users.created_at.label"|trans }}</th>
                        <th>{{ "users.last_login.label"|trans }}</th>
                    </tr>
                </thead>

                <tbody>
                    {% for user in users %}
                        <tr id="user-{{ user.id }}" class="clickable-row"
                            data-href="{{ path("admin_user", {"id": user.id}) }}">
                            <td class="action">
                                <input type="checkbox" id="select-all" class="i-check"/>
                            </td>
                            <td class="email">{{ user.email }}</td>
                            <td class="name">{{ user.getDisplayName() }}</td>
                            <td class="type">{{ ("users.type." ~ user.type)|trans }}</td>
                            <td class="status">{{ ("users.status." ~ user.status)|trans }}</td>
                            <td class="created-at">{{ user.createdAt|localizeddate("short", "none") }}</td>
                            <td class="last-login">
                                {{ user.lastLogin ?
                                user.lastLogin|localizeddate("short", "medium")
                                : "label.non_available"|trans }}
                            </td>
                        </tr>
                    {% endfor %}

                    {% if users is empty %}
                        <tr>
                            <td colspan="7">
                                <p class="text-center">{{ "label.info.empty_result"|trans }}</p>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {% include "@includes/Pagination/pager.html.twig" with {"route": routeName, "response": response, "target": '#table-content'} %}
    </div>
    <div class="col-md-3 col-sm-2 col-xs-12">
        <div class="pull-right">
            {% include "@includes/Pagination/results_per_page.html.twig" with {"route": routeName, "response": response, "target": '#table-content'} %}
        </div>
    </div>
</div>

