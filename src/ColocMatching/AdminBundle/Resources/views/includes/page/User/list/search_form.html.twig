<div class="row">
	<div class="col-md-12">
		<div class="box box-default collapsed-box" id="search-box">
			<div class="box-header with-border">
				<h3 class="box-title">{{ "title.search"|trans }}</h3>	
				<div class="box-tools pull-right">
    				<button type="button" class="btn btn-box-tool" data-widget="collapse">
    					<i class="fa fa-minus"></i>
                    </button>
    			</div>
			</div>
			
			<div class="box-body">
				<form action="{{ path("admin_user_template_search") }}" method="post" id="search-form">
					<div class="row">
						{# User e-mail #}
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label for="email">{{ "users.email"|trans }}</label>
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-at"></i>
									</span>
									<input type="text" id="email" class="form-control" name="email" />
								</div>
							</div>
						</div>
						
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label for="type">{{ "users.type.title"|trans }}</label>
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-question"></i>
									</span>
									<select id="type" class="form-control selectpicker show-menu-arrow" name="type">
										<option value=""></option>
										<option value="search">{{ "users.type.search"|trans }}</option>
										<option value="proposal">{{ "users.type.proposal"|trans }}</option>
									</select>
								</div>
							</div>
						</div>
						
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label>{{ "users.created_at.title"|trans }}</label>
								<div class="row">
									<div class="col-md-6 col-sm-6 col-xs-12">
										<div class="input-group date" data-provide="datepicker">
        									<span class="input-group-addon">
            									<i class="fa fa-calendar"></i>
            								</span>
            								<input type="text" name="createdAtSince" class="form-control" placeholder="{{ "users.created_at.since"|trans }}" />
            							</div>
									</div>
									<div class="col-md-6 col-sm-6 col-xs-12">
										<div class="input-group date" data-provide="datepicker">
        									<span class="input-group-addon">
            									<i class="fa fa-calendar"></i>
            								</span>            								
            								<input type="text" name="createdAtUntil" class="form-control" placeholder="{{ "users.created_at.until"|trans }}" />
            							</div>
									</div>
								</div>
							</div>
						</div>
						
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label for="last-login">{{ "users.last_login.title"|trans }}</label>
								<div class="input-group date" data-provide="datepicker">
									<span class="input-group-addon">
										<i class="fa fa-calendar"></i>
									</span>
									<input type="text" id="last-login" class="form-control" name="lastLogin" placeholder="{{ "users.last_login.since"|trans }}" />
								</div>
							</div>
						</div>
						
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label for="type">{{ "users.enabled"|trans }}</label>
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-question"></i>
									</span>
									<select id="type" class="form-control selectpicker show-menu-arrow" name="type">
										<option value=""></option>
										<option value="true">{{ "users.enabled"|trans }}</option>
										<option value="false">{{ "users.disabled"|trans }}</option>
									</select>
								</div>
							</div>
						</div>
						
					</div> <!-- END <div class="row"> -->
				</form>
			</div>
			
			<div class="box-footer">
				<div class="pull-right">
					<div class="form-inline">
    					<div class="form-group">
    						<select class="form-control" id="sorting" name="sort">
    							<option data-sort="id" data-order="ASC" selected>{{ "label.sorting.default"|trans }}</option>
            					<option data-sort="createdAt" data-order="DESC">{{ "label.info.users.latest"|trans }}</option>
            				</select>
            				
    					</div>
    					<div class="form-group">
    						<button type="submit" form="search-form" class="btn btn-primary" id="validate-search">
        						<i class="fa fa-search"></i> <span>{{ "label.button.search"|trans }}</span>
        					</button>
    					</div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>




			