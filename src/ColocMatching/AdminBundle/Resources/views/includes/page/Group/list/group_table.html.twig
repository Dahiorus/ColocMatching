<div class="row">
    {% set groups = response.content %}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>{{ "groups.name.label"|trans }}</th>
                    <th>{{ "groups.members.count.label"|trans }}</th>
                    <th>{{ "groups.budget.label"|trans }}</th>
                    <th>{{ "groups.status.label"|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for group in groups %}
                    <tr id="group-{{ group.id }}" class="clickable-row"
                        data-id="{{ group.id }}"
                        data-href="#">
                        <td class="action">
                            <input type="checkbox" id="select-all" class="i-check"/>
                        </td>
                        <td class="name">{{ group.name }}</td>
                        <td class="count-members">{{ group.members|length }}</td>
                        <td class="type">{{ "groups.budget.value"|trans({"%value%": group.budget}) }}</td>
                        <td class="rent-price">{{ ("groups.status." ~ group.status)|trans }}</td>
                    </tr>
                {% endfor %}

                {% if groups is empty %}
                    <tr>
                        <td colspan="8">
                            <p class="text-center">{{ "label.info.empty_result"|trans }}</p>
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {% include "@includes/Pagination/pager.html.twig" with {"route": routeName, "response": response, "target": '#table-content'} %}
    </div>
    <div class="col-md-3 col-sm-2 col-xs-12">
        <div class="pull-right">
            {% include "@includes/Pagination/results_per_page.html.twig" with {"route": routeName, "response": response, "target": '#table-content'} %}
        </div>
    </div>
</div>