{#
	Parameter:
	    - announcement: an instance of Announcement
 #}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">{{ "announcements.visits.label"|trans }}</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <div id="visits-container" data-announcement="{{ announcement.id }}">
            {# Visits loaded by AJAX #}
        </div>
    </div>
</div>