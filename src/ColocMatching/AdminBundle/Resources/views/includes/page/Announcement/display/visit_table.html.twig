<div class="row">
    {% set visits = response.content %}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th class="col-xs-6">{{ "visits.visitor.label"|trans }}</th>
                        <th class="col-xs-6">{{ "visits.visited_at.label"|trans }}</th>
                    </tr>
                </thead>

                <tbody>
                    {% for visit in visits %}
                        <tr id="visit-{{ visit.id }}">
                            <td class="visitor">
                                {% set visitor = visit.visitor %}
                                <a href="{{ path("admin_user", {"id": visitor.id}) }}">
                                    {{ visitor.getDisplayName() }}
                                </a>
                            </td>
                            <td class="visited-at">
                                {{ visit.visitedAt|localizeddate() }}
                            </td>
                        </tr>
                    {% endfor %}

                    {% if visits is empty %}
                        <tr>
                            <td colspan="8">
                                <p class="text-center">{{ "label.info.empty_result"|trans }}</p>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            {% include "@includes/Pagination/pager.html.twig" with {
            "route": "admin_announcement_visits",
            "parameters": { "id": id },
            "response": response,
            "target": '#visits-container'} %}
        </div>
    </div>
</div>