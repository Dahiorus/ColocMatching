{#
	Parameter:
		- candidates: a list of users
 #}
<div class="box">
  	<div class="box-header with-border">
    	<h3 class="box-title">{{ "announcements.candidates.label"|trans }}</h3>
    	<small class="label label-primary">{{ candidates|length }}</small>
    	<div class="box-tools pull-right">
      		<button type="button" class="btn btn-box-tool" data-widget="collapse">
				<i class="fa fa-minus"></i>
            </button>
    	</div>
  	</div>
  	
  	<div class="box-body">
  		<ul class="list-inline" id="candidate-list">
      		{% for candidate in candidates %}
      			{% set picturePath = (candidate.picture is not null) ? candidate.picture.getWebPath() : asset("users.picture.default"|trans) %}
      		<li class="list-inline-item candidate" id="{{ "candidate-" ~ candidate.id }}">
            	<a href="#" data-toggle="tooltip" data-placement="bottom" title="{{ candidate.getDisplayName() }}">
            		<img alt="{{ candidate.getDisplayName() }}" src="{{ picturePath }}" class="img-circle" style="height: 70px; width: 70px;">
            	</a>
        	</li>
      	    {% endfor %}
  		</ul>
  	    
  	</div>
</div>