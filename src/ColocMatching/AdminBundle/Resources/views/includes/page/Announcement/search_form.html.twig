<div class="row">
	<div class="col-md-12">
		<div class="box box-default collapsed-box" id="search-box">
			<div class="box-header with-border">
				<h3 class="box-title">{{ "title.search"|trans }}</h3>	
				<div class="box-tools pull-right">
    				<button type="button" class="btn btn-box-tool" data-widget="collapse">
    					<i class="fa fa-minus"></i>
                    </button>
    			</div>
			</div>
			
			<div class="box-body">
				<form action="{{ path("admin_announcements_template_search") }}" method="post" id="search-form">
					<div class="row">
						{# Announcement location #}
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label for="address">{{ "announcements.location"|trans }}</label>
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-map-marker"></i>
									</span>
									<input type="text" id="address" class="form-control" name="address" />
								</div>
							</div>
						</div>
						
						{# Announcement types #}
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label for="types">{{ "announcements.type.title"|trans }}</label>
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-question"></i>
									</span>
									<select name="types" class="form-control selectpicker show-menu-arrow" multiple id="types"
										data-selected-text-format="count > 2">
										<option value="rent">{{ "announcements.type.rent"|trans }}</option>
										<option value="sublease">{{ "announcements.type.sublease"|trans }}</option>
										<option value="sharing">{{ "announcements.type.sharing"|trans }}</option>
									</select>
								</div>
							</div>
						</div>
						
						{# Announcement rent price range #}
						<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12">
							<div class="form-group">
								<label>{{ "announcements.rent_price.title"|trans }}</label>
								<input id="rent-price-range" name="rentPriceRange" /> {# see JS script for ionSlider initialization #}
							</div>
						</div>
						
						{# Announcement start date range #}
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label>{{ "announcements.start_date.title"|trans }}</label>
								<div class="row">
									<div class="col-md-6 col-sm-6 col-xs-12">
										<div class="input-group date" data-provide="datepicker">
        									<span class="input-group-addon">
            									<i class="fa fa-calendar"></i>
            								</span>
            								<input type="text" name="startDateAfter" class="form-control" placeholder="{{ "announcements.start_date.after"|trans }}" />
            							</div>
									</div>
									<div class="col-md-6 col-sm-6 col-xs-12">
										<div class="input-group date" data-provide="datepicker">
        									<span class="input-group-addon">
            									<i class="fa fa-calendar"></i>
            								</span>            								
            								<input type="text" name="startDateBefore" class="form-control" placeholder="{{ "announcements.start_date.before"|trans }}"/>
            							</div>
									</div>
								</div>
							</div>
						</div>
						
						{# Announcement end date range #}
						<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label>{{ "announcements.end_date.title"|trans }}</label>
								<div class="row">
									<div class="col-md-6 col-sm-6 col-xs-12">
										<div class="input-group date" data-provide="datepicker">
        									<span class="input-group-addon">
            									<i class="fa fa-calendar"></i>
            								</span>
            								<input type="text" name="endDateAfter" class="form-control" placeholder="{{ "announcements.end_date.after"|trans }}" />
            							</div>
									</div>
									<div class="col-md-6 col-sm-6 col-xs-12">
										<div class="input-group date" data-provide="datepicker">
        									<span class="input-group-addon">
            									<i class="fa fa-calendar"></i>
            								</span>            								
            								<input type="text" name="endDateBefore" class="form-control" placeholder="{{ "announcements.end_date.before"|trans }}"/>
            							</div>
									</div>
								</div>
							</div>
							
						</div>
					</div> <!-- END <div class="row"> -->
				</form>
			</div>
			
			<div class="box-footer">
				<div class="pull-right">
					<div class="form-inline">
					<div class="form-group">
						<select class="form-control" id="sorting" name="sort">
							<option data-sort="id" data-order="ASC" selected>{{ "label.sorting.default"|trans }}</option>
        					<option data-sort="createdAt" data-order="DESC">{{ "label.info.announcements.latest"|trans }}</option>
        					<option data-sort="rentPrice" data-order="ASC">{{ "announcements.rent_price.sorting.asc"|trans }}</option>
        					<option data-sort="rentPrice" data-order="DESC">{{ "announcements.rent_price.sorting.desc"|trans }}</option>
        				</select>
        				
					</div>
					<div class="form-group">
						<button type="submit" form="search-form" class="btn btn-primary" id="validate-search">
    						<i class="fa fa-search"></i> <span>{{ "label.button.search"|trans }}</span>
    					</button>
					</div>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>




			